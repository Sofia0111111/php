<?php

// Интерфейс логгера, который определяет метод log
interface LoggerInterface {
    public function log(string $message): void;
}

// Абстрактный класс, который реализует общую логику логирования
abstract class AbstractLogger implements LoggerInterface {
    // Метод для записи в базу данных (иллюстрация логики)
    protected function writeToDatabase(string $message): void {
        // Здесь должна быть логика записи в БД
        echo "Запись в БД: $message\\n";
    }

    // Реализация метода log, который будет переопределен в наследниках
    public function log(string $message): void {
        $this->writeToDatabase($message);
    }
}

// Конкретный класс логгера, наследующий AbstractLogger
class DatabaseLogger extends AbstractLogger {
    // Реализация метода log
    public function log(string $message): void {
        $this->writeToDatabase($message); // Вызов логики записи
    }
}

// Пример использования
$logger = new DatabaseLogger();
$logger->log("Тестовое сообщение");
